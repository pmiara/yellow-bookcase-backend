{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "name": "Book",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext"
    },
    "coverImg": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "author": {
      "type": "string",
      "required": true
    },
    "bookshelves": {
      "via": "books",
      "collection": "bookshelf",
      "dominant": true
    }
  }
}
